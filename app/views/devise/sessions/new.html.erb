<h2 class="title" >登入</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :email, "帳號(E-mail)", class:"label" %>
    <div class="control">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"input" %>
    </div>
  </div>

  <div class="field">
    <%= f.label :password, "密碼", class:"label" %>
    <div class="control">
      <%= f.password_field :password, autocomplete: "current-password", class:"input" %>
    </div>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me, "記住我的登入資訊" %>
    </div>
  <% end %>

  <div class="actions">
    <div class="control">
      <%= f.submit "登入" , class:"button is-warning"%>
    </div>
  </div>
<% end %>

<%= render "devise/shared/links" %>
